<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hackru2015s.ru_direct" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="me.rutgersdirect.rudirect.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.rutgersdirect.rudirect.ui.BusTimesActivity"
            android:label="@string/title_activity_bus_times" >
        </activity>
        <activity
            android:name="me.rutgersdirect.rudirect.ui.AllBusesActivity"
            android:label="@string/title_activity_all_buses" >
        </activity>
    </application>

</manifest>
